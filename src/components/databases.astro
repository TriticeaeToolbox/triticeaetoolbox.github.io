  <Instance title="T3/Oat Sandbox" logo="oat_square.png" url="oat-sandbox.triticeaetoolbox.org" sandbox />
</Crop>

<Crop crop="barley">
  <Instance title="T3/Barley" logo="barley_square.png" url="barley.triticeaetoolbox.org" />
  <Instance title="T3/Barley Sandbox" logo="barley_square.png" url="barley-sandbox.triticeaetoolbox.org" sandbox />
