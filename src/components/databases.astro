---
import Crop from '../components/crop.astro';
import Instance from '../components/instance.astro';
---

<Crop crop="wheat">
  <Instance
    title="T3/Wheat"
    logo="wheat_square.png"
    description="A curated public wheat database, where any user can access and download data"
    url="wheat.triticeaetoolbox.org"
  />
  <Instance sandbox
    title="T3/Wheat Sandbox"
    logo="wheat_square.png"
    description="A sandbox version of the public wheat database, where any user can upload data to test out the database"
    url="wheat-sandbox.triticeaetoolbox.org"
  />
  <Instance closed
    title="T3/WheatCAP"
    logo="wheat_square.png"
    description="A private wheat database available to WheatCAP participants.  New accounts have to be approved by the website administrators."
    url="wheatcap.triticeaetoolbox.org"
  />
  <Instance classic
    title="T3/Wheat Classic"
    logo="wheat_classic.png"
    description="The original T3 wheat database with data up to January 2020"
    url="triticeaetoolbox.org/wheat?old=1"
  />
</Crop>

