---
import Crop from '../components/crop.astro';
import Instance from '../components/instance.astro';
---

<Crop crop="wheat">
  <Instance title="T3/Wheat" logo="wheat_square.png" url="wheat.triticeaetoolbox.org" />
  <Instance title="T3/Wheat Sandbox" logo="wheat_square.png" url="wheat-sandbox.triticeaetoolbox.org" sandbox />
